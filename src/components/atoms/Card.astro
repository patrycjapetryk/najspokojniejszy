---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li
  class="flex justify-center items-center px-4 py-8 bg-green rounded-2xl text-white hover:scale-105 transition-transform ease-in-out xl:px-8 xl:py-12 xl:rounded-3xl"
>
  <a href={href}>
    <h3 class="text-center text-sm uppercase leading-snug">
      {title}
    </h3>
  </a>
</li>
